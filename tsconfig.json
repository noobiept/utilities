{
    "compilerOptions": {
        "declaration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es2018",
        "module": "es2015",
        "moduleResolution": "Node",
        "declarationDir": "./build",
        "allowSyntheticDefaultImports": true
    },
    "include": ["source/**/*.ts"]
}
