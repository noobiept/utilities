{
    "name": "@drk4/utilities",
    "displayName": "utilities",
    "version": "3.0.2",
    "description": "Random collection of utilities functions/classes.",
    "author": {
        "name": "Pedro Ferreira",
        "email": "plferreira4@gmail.com",
        "url": "https://nbpt.eu/"
    },
    "files": [
        "build"
    ],
    "main": "build/utilities.cjs.js",
    "module": "build/utilities.esm.js",
    "types": "build/utilities.d.ts",
    "repository": {
        "type": "hg",
        "url": "https://bitbucket.org/drk4/javascript_utilities/"
    },
    "keywords": [
        "utilities"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/jest": "^24.0.16",
        "babel-jest": "^24.8.0",
        "jest": "^24.8.0",
        "light-server": "^2.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "rimraf": "^2.6.3",
        "rollup": "^1.18.0",
        "rollup-plugin-terser": "^5.1.1",
        "typedoc": "^0.15.0",
        "typescript": "^3.5.3"
    },
    "scripts": {
        "dev": "tsc -w",
        "dev:test": "light-server --serve . --port 8000 --open --watchexp \"source/**/*.js,dev/**\"",
        "build": "npm-run-all --serial build:*",
        "build:clean": "rimraf build/",
        "build:tsc": "tsc",
        "build:rollup": "rollup --config rollup.config.js",
        "test": "jest ./tests/ --coverage",
        "documentation": "typedoc --out documentation/ source/ --name Utilities --mode file",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "prepublishOnly": "npm run build"
    }
}
