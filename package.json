{
    "name": "@drk4/utilities",
    "displayName": "utilities",
    "version": "4.0.0",
    "description": "Random collection of utilities functions/classes.",
    "author": {
        "name": "Pedro Ferreira",
        "email": "plferreira4@gmail.com",
        "url": "https://nbpt.eu/"
    },
    "files": [
        "build"
    ],
    "main": "build/utilities.cjs.js",
    "module": "build/utilities.esm.js",
    "types": "build/utilities.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/noobiept/utilities"
    },
    "keywords": [
        "utilities"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-typescript": "^7.9.0",
        "@types/jest": "^25.2.1",
        "babel-jest": "^25.3.0",
        "cpy-cli": "^3.1.0",
        "jest": "^25.3.0",
        "light-server": "^2.6.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "rimraf": "^3.0.2",
        "rollup": "^2.6.1",
        "rollup-plugin-terser": "^5.3.0",
        "typedoc": "^0.17.4",
        "typedoc-plugin-markdown": "^2.2.17",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "dev": "tsc -w",
        "dev:test": "light-server --serve . --port 8000 --open --watchexp \"source/**/*.js,dev/**\"",
        "build": "npm-run-all --serial build:* test documentation",
        "build:clean": "rimraf build/",
        "build:tsc": "tsc",
        "build:rollup": "rollup --config rollup.config.js",
        "build:copy_css": "cpy ./source/**/*.css ./build",
        "test": "jest ./tests/ --coverage",
        "documentation": "npm-run-all --serial documentation:*",
        "documentation:clean": "rimraf docs/",
        "documentation:build": "typedoc --out docs/ source/ --name Utilities --mode file --readme none",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "prepublishOnly": "npm run build"
    }
}
