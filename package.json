{
    "name": "@drk4/utilities",
    "version": "3.0.1",
    "description": "Random collection of utilities functions/classes.",
    "author": {
        "name": "Pedro Ferreira",
        "email": "plferreira4@gmail.com",
        "url": "https://nbpt.eu/"
    },
    "files": [
        "build"
    ],
    "main": "build/utilities.cjs.js",
    "module": "build/utilities.esm.js",
    "types": "build/utilities.d.ts",
    "repository": {
        "type": "hg",
        "url": "https://bitbucket.org/drk4/javascript_utilities/"
    },
    "keywords": [
        "utilities"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "devDependencies": {
        "node-qunit-puppeteer": "^1.0.12",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "qunit": "^2.9.2",
        "rimraf": "^2.6.3",
        "rollup": "^1.16.3",
        "rollup-plugin-terser": "^5.0.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.5.2"
    },
    "scripts": {
        "dev": "tsc -w",
        "build": "npm-run-all --serial build:*",
        "build:clean": "rimraf build/",
        "build:tsc": "tsc",
        "build:rollup": "rollup --config rollup.config.js",
        "test": "node-qunit-puppeteer tests/tests.html 10000 \"--no-sandbox\"",
        "documentation": "typedoc --out documentation/ source/ --name Utilities --mode file",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\""
    }
}
