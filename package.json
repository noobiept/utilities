        "rollup": "^1.16.2",
        "typedoc": "~0.14.2",
        "typescript": "~3.5.2"
    },
    "scripts": {
        "dev": "tsc -w",
        "build": "npm-run-all --serial build:tsc --parallel build:iife build:cjs",
