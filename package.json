{
    "name": "@drk4/utilities",
    "displayName": "utilities",
    "version": "5.2.0",
    "description": "Random collection of utilities functions/classes.",
    "author": {
        "name": "Pedro Ferreira",
        "email": "plferreira4@gmail.com",
        "url": "https://nbpt.eu/"
    },
    "files": [
        "build"
    ],
    "main": "build/utilities.cjs.js",
    "module": "build/utilities.esm.js",
    "types": "build/utilities.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/noobiept/utilities"
    },
    "keywords": [
        "utilities",
        "dialog",
        "preload",
        "timer"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "@rollup/plugin-typescript": "^8.2.0",
        "@types/jest": "^27.0.0",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "@typescript-eslint/parser": "^5.22.0",
        "babel-jest": "^28.1.0",
        "cypress": "^9.6.0",
        "eslint": "^8.15.0",
        "eslint-plugin-cypress": "^2.11.3",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "light-server": "^2.9.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.56.2",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-terser": "^7.0.2",
        "start-server-and-test": "^1.13.1",
        "typedoc": "^0.22.0",
        "typedoc-plugin-markdown": "^3.10.4",
        "typescript": "^4.6.4"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:build": "rollup --config ./dev/rollup-dev.config.js --watch",
        "dev:server": "light-server --serve ./dev/ --port 8080 --open --quiet --watchexp \"source/**/*.js,dev/**\"",
        "build": "npm-run-all --serial build:*",
        "build:clean": "rimraf build/",
        "build:tsc": "tsc",
        "build:rollup": "rollup --config rollup.config.js",
        "test": "npm-run-all --serial build:tsc format:check lint unit e2e",
        "unit": "jest ./tests/ --coverage",
        "unit:w": "jest ./tests/ --coverage --watch",
        "e2e": "start-server-and-test e2e:run http://localhost:8080 cy:run",
        "e2e:run": "npm run e2e:build && npm run e2e:server",
        "e2e:build": "rollup --config ./dev/rollup-dev.config.js",
        "e2e:server": "light-server --serve ./dev/ --port 8080 --quiet",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "lint": "eslint . --ext .js,.ts",
        "documentation": "npm-run-all --serial documentation:*",
        "documentation:clean": "rimraf docs/",
        "documentation:build": "typedoc --out docs/ source/utilities.ts --name Utilities --readme none",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "everything": "npm-run-all --serial test build documentation",
        "prepublishOnly": "npm run everything"
    }
}
